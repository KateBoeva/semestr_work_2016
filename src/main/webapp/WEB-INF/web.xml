<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
           version="3.0">

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.Katya_Boeva.Servlets.Auth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.Katya_Boeva.Servlets.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomePage</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/Login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrPage</servlet-name>
        <jsp-file>/Registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrPage</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

</web-app>
